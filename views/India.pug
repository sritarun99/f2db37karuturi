extends layout

block content
  h1= title
  - var results = results ;
  div(class="container-fluid mt-3")
  div(class="row m-1")
    each item in results
      - let destination = `dispatch(\"/india/update?id=${item._id}\")`
      div(class="col-sm-2", class="m-1") State1:#{item.State1},Region:#{item.Region},State2:#{item.State2}
        button.btn(class="btn btn-primary",onclick=destination) Update
        button.btn(class="btn btn-success", onclick= detail) Details
        button.btn(class="btn btn-danger", onclick= deleteItem) Delete
          
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<results.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].State1}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
    function dispatch(path){ 
      window.location.href=path 
    } 